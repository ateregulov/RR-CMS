@model IEnumerable<RrCms.Models.Article>

@{
    ViewBag.Title = "Admin Area - Articles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Статьи</h2>

<p>
    @Html.ActionLink("Добавить статью", "Create")
</p>
<table>
    <tr>
        <th>Id</th>
        <th>Порядок</th>
        <th>Заголовок</th>
        <th>Заголовок в меню</th>
        <th>Адрес URL</th>
        <th>Создан</th>
        <th>Отредактирован</th>
        <th>Пользователь</th>
        <th>Черновик</th>
        <th>&nbsp;</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.ArticleId)</td>
        <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
        <td>@Html.ActionLink(item.Title ?? "Пусто", "Details", new { id = item.ArticleId }, new { title = "Show article" })</td>
        <td>@Html.DisplayFor(modelItem => item.MenuTitle)</td>
        <td>@Html.DisplayFor(modelItem => item.FriendlyUrl)</td>
        <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
        <td>@Html.DisplayFor(modelItem => item.EditDate)</td>
        <td>@Html.DisplayFor(modelItem => item.EditUser)</td>
        <td>@Html.DisplayFor(modelItem => item.IsDraft)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArticleId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArticleId })
        </td>
    </tr>
}

</table>
