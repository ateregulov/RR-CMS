@model RrCms.Models.Article
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Keywords = Model.HtmlKeywords;
    ViewBag.Description = Model.HtmlDesription;
}
@section scripts{
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>
@if (User.IsInRole("Editor"))
{
        <script src="@Url.Content("~/Scripts/jeditable.js")" type="text/javascript"> </script>}
}
<h1>@Html.DisplayFor(model => model.Title)</h1>
<div>
    @{
        Output.Write(Model.Text);
    }
</div>
@if (User.IsInRole("Editor"))
{
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArticleId })
}
