                            <li><a href="#">Link</a></li>
                        </ul>
                    </div>
                    <!--/.well -->
                </div>
                <!--/span-->
                <div class="span9">
                    @RenderBody()
                </div>
                <!--/span-->
            </div>
            <!--/row-->
            <hr>
            <footer>
                <p>&copy; Company 2012</p>
                @{
                    Html.RenderAction("GetContacts", "Contact");
                }
            </footer>
        </div>
        <!--/.fluid-container-->
